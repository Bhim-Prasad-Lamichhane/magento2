<?xml version="1.0"?>
<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="product.info.details">
            <block class="Magento\Catalog\Block\Product\View" name="custom.tab" template="Intuji_Customtab::custom_tab.phtml" group="detailed_info">
                <arguments>
                    <argument translate="true" name="title" xsi:type="string">Custom tab</argument>
                </arguments>
            </block>
        </referenceBlock>

        <referenceBlock name="page.main.title">
            <block class="Magento\Catalog\Block\Product\View" name="title.tab" template="Intuji_Customtab::title.phtml" group="title_info"/>
        </referenceBlock>

        <referenceBlock name="product.info.main">
            <block class="Intuji\Customtab\Block\Description" name="description.info.sku" template="Intuji_Customtab::description.phtml" after="product.info.type" />

            <!-- <block class="Intuji\Customtab\Block\Product" name="product.tab" template="Intuji_Customtab::product.phtml"/> -->
        </referenceBlock>

        <referenceBlock name="product.info.addtocart">
            <block class="Intuji\Customtab\Block\Product" name="product.tab" template="Intuji_Customtab::product.phtml"/>
        </referenceBlock>

         <referenceBlock name="product.info.main">
            <block class="Intuji\Customtab\Block\Product\CustomDescription" name="product.custom.description" template="Intuji_Customtab::product/view/details.phtml"/>
        </referenceBlock>
    </body>
</page>
