<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="styles"/>
    <body>
        <referenceContainer name="content">
            <block class="Magento\Backend\Block\Page\Title" name="page.main.title">
                <arguments>
                    <argument name="pageTitle" xsi:type="string">Hello Intuji</argument>
                </arguments>
            </block>
            <block class="Intuji\Mymodule\Block\Adminhtml\Hello" name="intujiblog_hello" template="Intuji_Mymodule::hello.phtml"/>
        </referenceContainer>
    </body>
</page>
